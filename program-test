<?php
$str='welcome';
$string_length=strlen($str);
$y=0;
for($i=0;$i<$string_length;$i++){
	for($j=0;$j<$string_length-i;$j++){
		echo "&nbsp;";
	}
	for($k=0;k<=$i;$k++){
		$floor=ceil($sting_length/2)+k;
		if($floor<=$string_length){
			echo substr($str,$floor-1,k+1);
		}
		else{
			echo substr($str,$y,1);
			$y++;
		}
}
echo "<br>";
}?>
